<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.input :content_type, :collection => ['Blog', 'Editorial'] %>
    <%# should be f.input :disabled_text, :disabled => true %>
    <%= f.input :disabled_text, :disabled => true, :input_html => { :class => 'disabled' } %>
  </div>

  <div class="actions">
    <%= f.button :submit, :class => 'btn primary' %>
  </div>
<% end %>
